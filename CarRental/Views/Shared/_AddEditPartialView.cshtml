@model Car

<div class="form-group">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="PricePerKM" class="form-label"></label>
    <input asp-for="PricePerKM" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
</div>
<div class="form-group">
    <label asp-for="CarType" class="form-label"></label>
    <select asp-for="CarTypeId" class="form-select" asp-items="ViewBag.CarType">
        <option value="">---Select Car Type---</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="ReturnDate" class="form-label"></label>
    <input asp-for="ReturnDate" class="form-control" />
</div>
<div>
    <br />
    <input type="submit" value="Save" class="btn btn-primary">
    <button asp-action="Cars" asp-controller="Car"
            class="btn btn-outline-secondary">
        Cancel
    </button>
</div>