@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*Bootstrap*@
    <link asp-href-include="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*Font awesome*@
    <link asp-href-include="/font-awesome/css/all.min.css" rel="stylesheet" />
    @*Custom css*@
    <link asp-href-include="/css/custom.css" rel="stylesheet" />

</head>
<body class="container">
    <div class="navbar navbar-expand-md bg-dark navbar-dark border border-primary rounded-top">
        @*<div class="bg-dark text-light text-uppercase text-center">Menu goes here</div>*@
        <!-- Toggler/collapsible Button -->
        
        <div class="container-fluid">
        <a class="navbar-brand">
            <img src="~/images/logo.jpeg" style="width:120px"/>
            </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#MyNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="MyNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                        <a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active text-uppercase text-decoration-underline" : "")
                        " asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link
                    @(controller == "Car" ? "active text-uppercase text-decoration-underline" : "")
                    dropdown-toggle" data-bs-toggle="dropdown">Rent</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Car" asp-action="Cars">Cars</a>
                    </div>
                </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link 
                        @(controller == "Enquiry" ? "active text-uppercase text-decoration-underline" : "")
                        dropdown-toggle" data-bs-toggle="dropdown">Enquiries</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Enquiry" asp-action="Add">Add</a>
                            <a class="dropdown-item" asp-controller="Enquiry" asp-action="List">List</a>
                        </div>
                    </li>
                <li class="nav-item">
                    <a class="nav-link 
                     @(controller == "Home" && action == "About" ? "active text-uppercase text-decoration-underline" : "")
                    " asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link 
                     @(controller == "Home" && action == "Help" ? "active text-uppercase text-decoration-underline" : "")
                    " asp-controller="Home" asp-action="Help">Help</a>
                </li>

            </ul>
            </div>

        </div>
    </div>
        <div> 
        @RenderBody()
    </div>
    
    <br />
    
    <div id="Footer">
        <div class="bg-dark text-light pt-1 pb-1 text-uppercase text-center rounded-bottom">
           
        <p>Created by: TTL. Mosikilili </p>
        <p><span class="fa-solid fa-copyright"></span> UFS - CSIQ3734 (2023)</p>
            <a href="https://www.facebook.com">
                <span style="color:#4267B2">
                    <i class="fa-brands fa-facebook fa-1x"></i>
                </span>
            </a>
            <a href="https://www.instagram.com">
                <span style="color:#feda75">
                    <i class="fa-brands fa-instagram fa-1x"></i>
                </span>
            </a>
            <a href="https://www.twitter.com">
                <span style="color:#4267B2">
                    <i class="fa-brands fa-twitter fa-1x"></i>
                </span>
                </a>
        </div>
    </div> 
    
    <script asp-src-include="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
